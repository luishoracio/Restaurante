<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.codipaj.restaurante.app.MainActivity">

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="MenÃº"
        android:id="@+id/btnMenu"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:textSize="30sp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Promociones"
        android:id="@+id/btnPromociones"
        android:layout_below="@+id/btnMenu"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:textSize="30sp"
        android:onClick="abrirPromocion" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sucursales"
        android:id="@+id/btnSucursales"
        android:layout_gravity="center"
        android:layout_below="@+id/btnPromociones"
        android:layout_centerHorizontal="true"
        android:textSize="30sp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:src="@drawable/bisonte"
        android:layout_above="@+id/btnMenu"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
